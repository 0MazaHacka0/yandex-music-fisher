{
    "manifest_version": 2,
    "name": "Yandex Music Fisher",
    "description": "Скачивание музыки с Yandex Music",
    "version": "0.0.3",
    "permissions": [
        "tabs",
        "downloads",
        "https://music.yandex.ru/"
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "page_action": {
        "default_icon": {
            "19": "img/icon.png",
            "38": "img/icon.png"
        },
        "default_title": "Yandex Music Fisher"
    },
    "icons": {
        "16": "img/icon.png",
        "32": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    }
}
