{
    "manifest_version": 2,
    "name": "Yandex Music Fisher",
    "description": "Скачивание музыки с Yandex Music",
    "version": "0.1.2",
    "permissions": [
        "tabs",
        "downloads",
        "cookies",
        "https://music.yandex.ru/"
    ],
    "background": {
        "scripts": ["js/page_info.js", "js/utils.js", "js/yandex_api.js", "js/downloader.js", "js/background.js"],
        "persistent": true
    },
    "options_page": "html/options.html",
    "page_action": {
        "default_title": "Yandex Music Fisher"
    },
    "icons": {
        "16": "img/icon.png",
        "32": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
